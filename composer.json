{
  "name": "candycms/plugins",
  "type": "library",
  "description": "Plugins for candyCMS.",
  "keywords": ["php", "candy", "cms"],
  "homepage": "http://www.candycms.com",
  "license": "MIT",

  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "tinymce/tinymce",
        "version": "3.3",
        "dist": {
          "url": "https://github.com/tinymce/tinymce/archive/3.3.x.zip",
          "type": "zip"
        },
        "source": {
          "url": "https://github.com/tinymce/tinymce.git",
          "type": "git",
          "reference": "master"
        }
      }
    }
  ],

  "require": {
    "php": ">=5.3.0",

    "candycms/core": ">=3.0.0",
    "facebook/php-sdk": "3.2.*",
    "dflydev/markdown" : "1.0.*",
    "tinymce/tinymce" : "3.3"
  },

  "authors": [
    {
      "name": "Marco Raddatz",
      "homepage": "http://www.marcoraddatz.com"
    }, {
      "name": "Hauke Schade",
      "homepage": "http://www.hauke-schade.de/"
    }
  ],

  "autoload": {
    "psr-0": {
      "candyCMS\\Plugins\\Index": ""
    }
  },

  "target-dir": ""
}